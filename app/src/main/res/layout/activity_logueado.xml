<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_logueado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_activity_logueado"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="56dp"
            android:background="#0000FF">

            <TextView
                android:id="@+id/textTituloInicio"
                android:layout_width="365dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="25dp"
                android:gravity="center"
                android:text="Herbario Uniquindio"
                android:textColor="#F5FFFA"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textSubInicio"
                android:layout_width="365dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="27dp"
                android:gravity="center"
                android:text="SesiÃ³n Administrador"
                android:textColor="#F5FFFA"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textSubNombre"
                android:layout_width="365dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:layout_marginEnd="27dp"
                android:gravity="center"
                android:text=""
                android:textColor="#F5FFFA"
                android:textSize="24sp"
                android:textStyle="bold" />
        </FrameLayout>
    </RelativeLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view_logueados"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_activity_logueado"
        app:menu="@menu/activity_logueado_drawer" />

</android.support.v4.widget.DrawerLayout>
