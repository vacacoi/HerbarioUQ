<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/resumenListaPlantasPen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:padding="8dp"

    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/imgPlanta"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/silueta_planta" />

        <TextView
            android:id="@+id/txtNombreTpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imgPlanta"
            android:text="Nombre"

            android:textSize="20sp"/>

        <TextView
            android:id="@+id/txtNombrePen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imgPlanta"
            android:text="Nombre"

            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/txtGeneroTPen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNombrePen"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/imgPlanta"
            android:text="Género"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/txtAutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNombrePen"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/imgPlanta"
            android:text="Género"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/txtEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtAutor"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/imgPlanta"
            android:text="Estado"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_detalle_rev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtEstado"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@id/txtGenero"
            android:text="Revisar" />

    </RelativeLayout>

</android.support.v7.widget.CardView>